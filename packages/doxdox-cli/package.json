{
  "name": "doxdox-cli",
  "description": "CLI package for doxdox.",
  "version": "4.0.0-preview.22",
  "bin": {
    "doxdox": "./dist/src/index.js"
  },
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "doxdox-core": "4.0.0-preview.22",
    "doxdox-parser-jsdoc": "4.0.0-preview.22",
    "doxdox-renderer-bootstrap": "4.0.0-preview.22",
    "doxdox-renderer-json": "4.0.0-preview.22",
    "doxdox-renderer-markdown": "4.0.0-preview.22",
    "globby": "14.0.1",
    "import-from": "4.0.0",
    "parse-cmd-args": "4.1.0",
    "simple-update-notifier": "2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.0.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "eslint": "9.0.0",
    "jest": "29.7.0",
    "nodemon": "3.1.0",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.2",
    "ts-jest-resolver": "2.0.1",
    "typescript": "5.4.5",
    "typescript-eslint": "7.6.0"
  },
  "scripts": {
    "test": "npx cross-env@7 NODE_OPTIONS=--experimental-vm-modules jest --runInBand --passWithNoTests",
    "test-update": "npx cross-env@7 NODE_OPTIONS=--experimental-vm-modules jest --runInBand --passWithNoTests --updateSnapshot",
    "build": "rimraf dist/ && tsc && chmod +x ./dist/src/index.js",
    "lint": "eslint"
  },
  "jest": {
    "collectCoverage": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "resolver": "ts-jest-resolver",
    "testRegex": ".*.test.ts$"
  },
  "keywords": [
    "doxdox",
    "documentation",
    "cli"
  ],
  "authors": [
    {
      "name": "Scott Doxey",
      "email": "hello@scottdoxey.com",
      "homepage": "http://scottdoxey.com/"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/docsbydoxdox/doxdox",
  "repository": {
    "type": "git",
    "url": "git://github.com/docsbydoxdox/doxdox.git"
  }
}
