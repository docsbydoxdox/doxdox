{
  "name": "doxdox-cli",
  "description": "CLI package for doxdox.",
  "version": "4.0.0-preview.14",
  "bin": {
    "doxdox": "./dist/src/index.js"
  },
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "type": "module",
  "engines": {
    "node": "^14.15.0 || ^16.10.0 || >=18.0.0"
  },
  "dependencies": {
    "doxdox-core": "4.0.0-preview.14",
    "doxdox-parser-jsdoc": "4.0.0-preview.14",
    "doxdox-renderer-bootstrap": "4.0.0-preview.14",
    "doxdox-renderer-json": "4.0.0-preview.14",
    "doxdox-renderer-markdown": "4.0.0-preview.14",
    "globby": "13.1.2",
    "import-from": "4.0.0",
    "parse-cmd-args": "4.1.0",
    "simple-update-notifier": "1.0.7"
  },
  "devDependencies": {
    "@types/jest": "29.0.1",
    "@types/node": "18.7.17",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "eslint": "8.23.1",
    "jest": "29.0.3",
    "nodemon": "2.0.19",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.0",
    "ts-jest-resolver": "2.0.0",
    "typescript": "4.8.3"
  },
  "scripts": {
    "test": "npx cross-env@7 NODE_OPTIONS=--experimental-vm-modules jest --runInBand --passWithNoTests",
    "test-update": "npx cross-env@7 NODE_OPTIONS=--experimental-vm-modules jest --runInBand --passWithNoTests --updateSnapshot",
    "build": "rimraf dist/ && tsc && chmod +x ./dist/src/index.js",
    "lint": "eslint 'src/**/*.ts'"
  },
  "jest": {
    "collectCoverage": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "resolver": "ts-jest-resolver",
    "testRegex": ".*.test.ts$"
  },
  "keywords": [
    "doxdox",
    "documentation",
    "cli"
  ],
  "authors": [
    {
      "name": "Scott Doxey",
      "email": "hello@scottdoxey.com",
      "homepage": "http://scottdoxey.com/"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/docsbydoxdox/doxdox",
  "repository": {
    "type": "git",
    "url": "git://github.com/docsbydoxdox/doxdox.git"
  }
}
