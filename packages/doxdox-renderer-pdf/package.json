{
  "name": "doxdox-renderer-pdf",
  "description": "PDF renderer for doxdox.",
  "version": "4.0.0-preview.2",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "highlight.js": "11.4.0",
    "html-pdf": "3.0.1",
    "markdown-it": "12.3.2",
    "markdown-table": "3.0.2"
  },
  "peerDependencies": {
    "doxdox-core": "4.0.0-preview.2"
  },
  "peerDependenciesMeta": {
    "doxdox-core": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/html-pdf": "3.0.0",
    "@types/node": "17.0.14",
    "jest": "27.4.7",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --passWithNoTests",
    "build": "rm -rf dist/ && tsc"
  },
  "keywords": [
    "doxdox",
    "documentation",
    "template"
  ],
  "jest": {
    "collectCoverage": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "homepage": "https://github.com/docsbydoxdox/doxdox",
  "repository": {
    "type": "git",
    "url": "git://github.com/docsbydoxdox/doxdox.git"
  }
}
