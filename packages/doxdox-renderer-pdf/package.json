{
  "name": "doxdox-renderer-pdf",
  "description": "PDF renderer for doxdox.",
  "version": "4.0.0-preview.22",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "highlight.js": "11.9.0",
    "markdown-it": "14.1.0",
    "markdown-table": "3.0.3",
    "puppeteer": "22.6.4"
  },
  "peerDependencies": {
    "doxdox-core": "4.0.0-preview.22"
  },
  "peerDependenciesMeta": {
    "doxdox-core": {
      "optional": false
    }
  },
  "devDependencies": {
    "@eslint/js": "9.0.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "eslint": "9.0.0",
    "jest": "29.7.0",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.2",
    "ts-jest-resolver": "2.0.1",
    "typescript": "5.4.5",
    "typescript-eslint": "7.6.0"
  },
  "scripts": {
    "test": "npx cross-env@7 NODE_OPTIONS=--experimental-vm-modules jest --runInBand --passWithNoTests",
    "test-update": "npx cross-env@7 NODE_OPTIONS=--experimental-vm-modules jest --runInBand --passWithNoTests --updateSnapshot",
    "build": "rimraf dist/ && tsc",
    "lint": "eslint"
  },
  "jest": {
    "collectCoverage": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "resolver": "ts-jest-resolver",
    "testRegex": ".*.test.ts$"
  },
  "keywords": [
    "doxdox",
    "documentation",
    "pdf"
  ],
  "authors": [
    {
      "name": "Scott Doxey",
      "email": "hello@scottdoxey.com",
      "homepage": "http://scottdoxey.com/"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/docsbydoxdox/doxdox",
  "repository": {
    "type": "git",
    "url": "git://github.com/docsbydoxdox/doxdox.git"
  }
}
