{
  "name": "doxdox-renderer-pdf",
  "description": "PDF renderer for doxdox.",
  "version": "4.0.0-preview.17",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": "^14.18.0 || ^16.10.0 || >=18.0.0"
  },
  "dependencies": {
    "highlight.js": "11.6.0",
    "html-pdf": "3.0.1",
    "markdown-it": "13.0.1",
    "markdown-table": "3.0.2"
  },
  "peerDependencies": {
    "doxdox-core": "4.0.0-preview.17"
  },
  "peerDependenciesMeta": {
    "doxdox-core": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/html-pdf": "3.0.0",
    "@types/jest": "29.1.2",
    "@types/node": "18.8.5",
    "@typescript-eslint/eslint-plugin": "5.40.0",
    "@typescript-eslint/parser": "5.40.0",
    "eslint": "8.25.0",
    "jest": "29.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.3",
    "ts-jest-resolver": "2.0.0",
    "typescript": "4.8.4"
  },
  "scripts": {
    "test": "npx cross-env@7 NODE_OPTIONS=--experimental-vm-modules jest --runInBand --passWithNoTests",
    "test-update": "npx cross-env@7 NODE_OPTIONS=--experimental-vm-modules jest --runInBand --passWithNoTests --updateSnapshot",
    "build": "rimraf dist/ && tsc",
    "lint": "eslint 'src/**/*.ts'"
  },
  "jest": {
    "collectCoverage": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "resolver": "ts-jest-resolver",
    "testRegex": ".*.test.ts$"
  },
  "keywords": [
    "doxdox",
    "documentation",
    "pdf"
  ],
  "authors": [
    {
      "name": "Scott Doxey",
      "email": "hello@scottdoxey.com",
      "homepage": "http://scottdoxey.com/"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/docsbydoxdox/doxdox",
  "repository": {
    "type": "git",
    "url": "git://github.com/docsbydoxdox/doxdox.git"
  }
}
